{
  "name": "Strategy Alignment Rules",
  "version": "1.0",
  "rules": [
    {
      "condition": "decision_conflicts_with_active_strategy",
      "action": "penalize_decision_score"
    },
    {
      "condition": "decision_advances_long_term_strategy",
      "action": "boost_decision_score"
    },
    {
      "condition": "strategy_unreviewed_past_cycle",
      "action": "flag_for_review"
    }
  ]
}
